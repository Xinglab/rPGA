################################################################################
##			      INSTALLATION				  ##
################################################################################

uninstall :
	pip uninstall rPGA

install :
	rm -rf dist
	python setup.py sdist
	pip install --upgrade dist/rPGA-1.1.1.tar.gz
	rPGA init

################################################################################
##			      DOCUMENTATION				 ##
################################################################################

docs :
	$(MAKE) -C sphinx clean
	$(MAKE) -C sphinx html
	rm -rf Docs/doctrees
	mv Docs/html/* Docs
	mv Docs/html/.buildinfo Docs
	rmdir Docs/html
.PHONY : docs

################################################################################
##			       UNIT TESTS				   ##
################################################################################

test :
	python src/test.py
	./src/smokeTests.sh

################################################################################
##			      HOUSEKEEPING				  ##
################################################################################

clean :
	rm -f `find . -name "*.pyc"`
	rm -rf dist
	rm -rf Docs
	rm -rf src/rPGA/rPGA.egg-info
